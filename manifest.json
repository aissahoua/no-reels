{
  "manifest_version": 3,
  "name": "no reels - حظر المقاطع القصيرة",
  "version": "1.0",
  "description": "حظر المحتوى القصير مثل Reels وShorts في المنصات الاجتماعية",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "notifications"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "no reels - حظر المقاطع القصيرة"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.facebook.com/*",
        "*://*.instagram.com/*",
        "*://*.youtube.com/*",
        "*://*.tiktok.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  }
}